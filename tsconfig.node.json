{
  "compilerOptions": {
    "composite": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "target": "es2022",
    "lib": [
      "es2023"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "moduleDetection": "force",
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "newLine": "lf"
  }
}
